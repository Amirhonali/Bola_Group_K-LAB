@model IEnumerable<DalaProject.Models.Ground>
@{
    ViewData["Title"] = "Кабинет фермера";
}
<h2>Добро пожаловать, фермер</h2>
<p>Земли, за которыми вы закреплены</p>
<div class="row">
    @foreach (var g in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@g.Location</h5>
                    <p class="card-text">Площадь: @g.Area га</p>
                    <a asp-controller="Grounds" asp-action="Details" asp-route-id="@g.Id" class="btn btn-sm btn-primary">Открыть</a>
                </div>
            </div>
        </div>
    }
</div>