@model IEnumerable<DalaProject.Models.Company>
@{
    ViewData["Title"] = "Кабинет владельца";
}
<h2>Добро пожаловать, владелец</h2>
<p>Ваши компании</p>
<div class="list-group">
    @foreach (var c in Model)
    {
        <a asp-controller="Companies" asp-action="Details" asp-route-id="@c.Id" class="list-group-item list-group-item-action">@c.Name</a>
    }
</div>