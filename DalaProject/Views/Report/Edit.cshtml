@model DalaProject.Models.Report
@{
    ViewData["Title"] = "Edit Report";
}

<h1>Edit Report</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Expenses"></label>
        <input asp-for="Expenses" class="form-control" />
        <span asp-validation-for="Expenses" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Income"></label>
        <input asp-for="Income" class="form-control" />
        <span asp-validation-for="Income" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuantityProduced"></label>
        <input asp-for="QuantityProduced" class="form-control" />
        <span asp-validation-for="QuantityProduced" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="QuantitySold"></label>
        <input asp-for="QuantitySold" class="form-control" />
        <span asp-validation-for="QuantitySold" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SeasonId"></label>
        <select asp-for="SeasonId" asp-items="ViewBag.Seasons" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="ProductId"></label>
        <select asp-for="ProductId" asp-items="ViewBag.Products" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}