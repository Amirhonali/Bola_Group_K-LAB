@model DalaProject.Models.Report
@{
    ViewData["Title"] = "Report Details";
}

<h1>Report Details</h1>

<div class="card p-3 mb-3">
    <h3>@Model.Income</h3>
    <p>@Model.Description</p>
</div>

<div class="card p-3 mb-3">
    <h4>Fermer Information</h4>
    <p><strong>Name:</strong> @Model.Fermer.FullName</p>
    <p><strong>Email:</strong> @Model.Fermer.Email</p>
</div>

<div class="card p-3 mb-3">
    <h4>Season Information</h4>
    <p><strong>Title:</strong> @Model.Season.Name</p>
    <p><strong>Start Date:</strong> @Model.Season.StartDate.ToShortDateString()</p>
    <p><strong>End Date:</strong> @(Model.Season.EndDate?.ToShortDateString() ?? "N/A")</p>
</div>

<div class="card p-3 mb-3">
    <h4>Product Information</h4>
    <p><strong>Name:</strong> @Model.Product.Title</p>
    <p><strong>Description:</strong> @Model.Product.Description</p>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>