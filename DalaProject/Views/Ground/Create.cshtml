@model DalaProject.Models.Ground

<h2>Создание земли</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label>Локация</label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label>Площадь (га)</label>
        <input asp-for="Area" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CompanyId" class="control-label"></label>
        <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.Companies">
            <option value="">-- Выберите компанию --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="FermerId" class="control-label"></label>
        <select asp-for="FermerId" class="form-control" asp-items="ViewBag.Fermers">
            <option value="">-- Выберите фермера --</option>
        </select>
    </div>
    <div class="form-group">
        <label>Картинка</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Создать</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>