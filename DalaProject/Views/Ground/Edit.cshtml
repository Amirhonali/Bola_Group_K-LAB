@model DalaProject.Models.Ground

<h2>Редактирование земли</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Локация</label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label>Площадь (га)</label>
        <input asp-for="Area" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CompanyId"></label>
        <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.Companies">
            <option value="">-- выберите компанию --</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="FermerId"></label>
        <select asp-for="FermerId" class="form-control" asp-items="ViewBag.Fermers">
            <option value="">-- выберите фермера --</option>
        </select>
    </div>
    <div class="form-group">
        <label>Картинка</label>
        <input type="file" name="imageFile" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" width="150" />
        }
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>