@model IEnumerable<DalaProject.Models.Season>
@{
    ViewData["Title"] = "Сезоны";
}
<h2>Сезоны</h2>
<p><a asp-action="Create" class="btn btn-primary">Добавить сезон</a></p>
<table class="table table-striped">
    <thead><tr><th>Название</th><th>Земля</th><th>Начало</th><th>Конец</th><th></th></tr></thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.Ground?.Location</td>
                <td>@s.StartDate.ToShortDateString()</td>
                <td>@(s.EndDate?.ToShortDateString() ?? "—")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-info">Открыть</a>
                    <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-secondary">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>