@model DalaProject.Models.Season
@{
    ViewData["Title"] = "Отчёты по сезону";
}

<h2>Отчёты по сезону: @Model.Name</h2>
<h4>Земля №@Model.Ground.Id (Компания: @Model.Ground.Company.Name)</h4>

@if (Model.Reports.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Фермер</th>
                <th>Расходы</th>
                <th>Доходы</th>
                <th>Произведено</th>
                <th>Продано</th>
                <th>Дата</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model.Reports)
            {
                <tr>
                    <td>@report.Fermer.FullName</td>
                    <td>@report.Expenses</td>
                    <td>@report.Income</td>
                    <td>@report.QuantityProduced</td>
                    <td>@report.QuantitySold</td>
                    <td>@report.CreatedAt.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Нет отчётов для этого сезона</p>
}
