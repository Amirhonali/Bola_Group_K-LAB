@model IEnumerable<DalaProject.Models.Company>
@{
    ViewData["Title"] = "Кабинет владельца";
}

<h2>Ваши компании и земли</h2>

@foreach (var company in Model)
{
    <div class="card mb-4">
        <div class="card-header bg-dark text-white">
            <h4>@company.Name</h4>
        </div>
        <div class="card-body">
            <p>@company.Description</p>

            <h5>Земли:</h5>
            <ul>
                @foreach (var ground in company.Grounds)
                {
                    <li>
                        Земля №@ground.Id (фермер: @ground.Fermer?.FullName)
                        <ul>
                            @foreach (var season in ground.Seasons)
                            {
                                <li>
                                    @season.Name (@season.StartDate.ToShortDateString() - @(season.EndDate?.ToShortDateString() ?? "текущий"))
                                    <a asp-action="SeasonReports" asp-route-seasonId="@season.Id" class="btn btn-sm btn-info">Отчёты</a>
                                </li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
}
