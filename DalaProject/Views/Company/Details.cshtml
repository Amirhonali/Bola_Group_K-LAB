@model DalaProject.Models.Company
@{
    ViewData["Title"] = "Детали компании";
}
<h2>@Model.Name</h2>
<p><strong>Описание:</strong> @Model.Description</p>
<p><strong>Владелец:</strong> @Model.Owner?.FullName</p>

<h4>Участки (Grounds)</h4>
@if (Model.Grounds != null && Model.Grounds.Any())
{
    <ul class="list-group">
        @foreach (var g in Model.Grounds)
        {
            <li class="list-group-item">@g.Name (@g.Size га)</li>
        }
    </ul>
}
else
{
    <p><em>Нет участков</em></p>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Назад</a>