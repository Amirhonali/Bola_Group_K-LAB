@model IEnumerable<DalaProject.Models.Company>

@{
    ViewData["Title"] = "Мои Компании";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold">Мои Компании</h2>
    <a asp-action="Create" class="btn btn-primary">➕ Добавить</a>
</div>

<div class="row">
    @foreach (var company in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden position-relative">
                <a asp-action="Details" asp-route-id="@company.Id" class="text-decoration-none">
                    <div class="card-img" 
                         style="background-image: url('@(string.IsNullOrEmpty(company.ImageUrl) ? "/Images/Dashboard/company-bg.jpg" : "/" + company.ImageUrl)'); 
                                background-size: cover; 
                                background-position: center; 
                                height: 200px;">
                    </div>
                    <div class="card-body text-center bg-dark bg-opacity-50 text-white position-absolute bottom-0 w-100">
                        <h5 class="fw-bold">@company.Name</h5>
                    </div>
                </a>

                <!-- Кнопка редактировать (в правом верхнем углу) -->
                <a asp-action="Edit" asp-route-id="@company.Id" 
                   class="btn btn-sm btn-light position-absolute top-0 end-0 m-2 rounded-circle shadow">
                    ✏️
                </a>
            </div>
        </div>
    }
</div>