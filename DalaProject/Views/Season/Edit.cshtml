@model DalaProject.Models.Season

@{
    ViewData["Title"] = "Редактировать сезон";
}

<h2>Редактировать сезон</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GroundId" class="control-label">Поле</label>
        <select asp-for="GroundId" class="form-control" asp-items="@(ViewBag.Grounds != null ? new SelectList(ViewBag.Grounds, "Id", "Location", Model.GroundId) : null)">
            <option value="">-- Выберите землю --</option>
        </select>
        <span asp-validation-for="GroundId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}