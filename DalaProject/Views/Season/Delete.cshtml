@model DalaProject.Models.Season

@{
    ViewData["Title"] = "Удалить сезон";
}

<h2>Удалить сезон</h2>

<div class="alert alert-danger">
    Вы уверены, что хотите удалить <strong>@Model.Name</strong>?
</div>

<dl class="row">
    <dt class="col-sm-2">Дата начала</dt>
    <dd class="col-sm-10">@Model.StartDate.ToShortDateString()</dd>

    <dt class="col-sm-2">Дата окончания</dt>
    <dd class="col-sm-10">@(Model.EndDate?.ToShortDateString() ?? "Не указана")</dd>

    <dt class="col-sm-2">Поле</dt>
    <dd class="col-sm-10">@Model.Ground.Location</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>