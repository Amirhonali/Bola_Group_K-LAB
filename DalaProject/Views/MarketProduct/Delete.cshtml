@model DalaProject.Models.MarketProduct
@{
    ViewData["Title"] = "Delete Market Product";
}

<h2>Delete Market Product</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this publication?
</div>

<div class="row mb-3">
    <div class="col-md-4">
        <img src="@Model.Product?.ImageUrl" alt="@Model.Product?.Title" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <h4>Product Information</h4>
        <p><strong>Name:</strong> @Model.Product?.Title</p>
        <p><strong>Category:</strong> @Model.Product?.Category</p>
        <p><strong>Description:</strong> @Model.Product?.Description</p>

        <h4>Seller Information</h4>
        <p><strong>Name:</strong> @Model.Fermer?.FullName</p>
        <p><strong>Email:</strong> @Model.Fermer?.Email</p>
        <p><strong>Phone:</strong> @Model.Phone</p>

        <h4>Market Info</h4>
        <p><strong>Price:</strong> @Model.Price</p>
        <p><strong>Published:</strong> @Model.PublishDate.ToString("yyyy-MM-dd HH:mm")</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>