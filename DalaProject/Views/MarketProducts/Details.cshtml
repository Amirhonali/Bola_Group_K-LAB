@model DalaProject.Models.MarketProduct
@{
    ViewData["Title"] = "Детали продукта";
}

<h2>Детали продукта</h2>

<div class="card shadow p-4">
    <h4>@Model.Title</h4>
    <p><strong>Описание:</strong> @Model.Description</p>
    <p><strong>Фермер:</strong> @Model.Fermer?.FullName</p>
    <p><strong>Продукт:</strong> @Model.Product?.Title</p>
    <p><strong>Категория:</strong> @Model.Category</p>
    <p><strong>Цена:</strong> @Model.Price</p>
    <p><strong>Дата публикации:</strong> @Model.PublishDate</p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mt-3">
            <img src="@Model.ImageUrl" alt="Image" class="img-fluid rounded shadow" style="max-height:300px;" />
        </div>
    }

    <div class="d-flex gap-2 mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Изменить</a>
        <a asp-action="Index" class="btn btn-secondary">Назад</a>
    </div>
</div>>