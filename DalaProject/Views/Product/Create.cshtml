@model DalaProject.Models.Product

@{
    ViewData["Title"] = "Добавить продукт";
}

<h2>Добавить продукт</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Сезон</label>
        <select asp-for="SeasonId" class="form-control"
                asp-items="@(new SelectList(ViewBag.Seasons, "Id", "Name"))"></select>
    </div>

    <div class="form-group">
        <label>Фото</label>
        <input type="file" name="imageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>