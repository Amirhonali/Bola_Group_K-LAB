@model IEnumerable<DalaProject.Models.Product>

@{
    ViewData["Title"] = "Мои продукты";
}

<h2>Мои продукты</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Добавить продукт</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Фото</th>
            <th>Название</th>
            <th>Категория</th>
            <th>Сезон</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="~/@item.ImageUrl" alt="Фото" width="100" />
                }
            </td>
            <td>@item.Title</td>
            <td>@item.Category</td>
            <td>@item.Season?.Name</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Детали</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Изменить</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>